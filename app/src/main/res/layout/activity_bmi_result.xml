<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_bmi_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bmicalculator.BmiResultActivity">

    <TextView
        android:id="@+id/bmi_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ค่าดัชนีมวลกาย (BMI): "
        android:textColor="#ffffff"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/bmi_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bmi_value_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="20.50"
        android:textColor="#ffff00"
        android:textSize="60sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/bmi_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bmi_value_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="อยู่ในเกณฑ์: "
        android:textColor="#ffffff"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/bmi_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bmi_description_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="น้ำหนักปกติ"
        android:textColor="#ffff00"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/bmi_image_view"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/bmi_description_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/bmi_normal_weight"/>

</RelativeLayout>
